<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>

        <header>
            <center>
                <nav>
                    <a href="/Cars/Home" class="btn btn-primary m-2">Home</a>
                    <a href="/Cars/Privacy" class="btn btn-warning m-2">Privacy</a>
                    @* <a href="/Cars/AboutUS" class="btn btn-success m-2">AboutUS</a> *@
                    <a asp-controller="Cars" asp-action="AboutUs" class="btn btn-success m-2">AboutUS</a>

                    <a href="/Cars/ContactUs" class="btn btn-secondary m-2">ContactUs</a>
                    <a href="/Auth/SignIn" class="btn btn-info m-2">Sign In</a>
                    <a href="/Auth/Register" class="btn btn-danger m-2">Register</a>

                </nav>
            </center>
        </header>

        @RenderBody()


        <footer>
            <center class="mt-2">
                <p>All Rights &copy; in Roshdy Company @DateTime.Now.Year</p>
            </center>
        </footer>
    </div>
</body>
</html>
